<!DOCTYPE html>
<html lang="pt-br">
<style>
  table,
  th,
  td {
    border: 1px solid black;
  }
</style>

<head>
  <title>
    Produtos
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1>
    Bem-vindo aos Produtos
  </h1>
  <div class="tableContainer">
    <table>
      <tr>
        <th>Id</th>
        <th>nome</th>
        <th>descrição</th>
        <th>preço</th>
        <th>deletar</th>
      </tr>
      <% for(var i=0; i<products.length; i++) {%>
        <tr>
          <td>
            <%= products[i].id %>
          </td>
          <td>
            <%= products[i].name %>
          </td>
          <td>
            <%= products[i].description %>
          </td>
          <td>
            <%= products[i].price %>
          </td>
          <td><a href="/product/product-delete/<%= products[i].id %>">X</a></td>
        </tr>
        <% } %>
    </table>
  </div>
  <div class="formContainer">
    <h2>Cadastrar novo produto</h2>

    <form action="/product/add" method="post">
      <div>
        <input type="text" name="name" placeholder="Digite um nome" />
      </div>
      <div>
        <input type="text" name="description" placeholder="Digite uma descrição" />
      </div>
      <div>
        <input type="number" name="price" placeholder="Digite um preço" />
      </div>
      <input type="submit" value="Cadastrar produto">
    </form>
  </div>
  <a href="/">Home</a>
</body>

</html>